{% schema %}
{
  "name": "Big Image Box",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hello World"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Big Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    }
  ],
  "presets": [
    {
      "name": "Big Image Box",
      "category": "Homepage"
    }
  ]
}
{% endschema %}

<div class="big-image-box" style="background-color: {{ section.settings.background_color }}; padding: 60px 0;">
  <div class="container" style="display:flex; align-items:center; max-width:1200px; margin:0 auto;">
    <div class="image-left" style="flex:1;">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | img_url: '1024x1024' }}" alt="Big Image" style="width:100%; border-radius:10px;">
      {% endif %}
    </div>
    <div class="text-right" style="flex:1; padding-left:40px;">
      <h2 style="margin-top:0; font-size:32px;">{{ section.settings.heading }}</h2>
      <p style="margin-top:20px; font-size:18px; color:#555;">
        Key concepts go here. You can add any text or description for your theme.
      </p>
    </div>
  </div>
</div>
